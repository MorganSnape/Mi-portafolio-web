---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Este es el portafolio web de Gabriela Ferrer" />
    <meta name="viewport" content="width=device-width" />
    <meta name="autor" content="Gabriela Ferrer" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fredoka:wdth,wght@75..125,300..700&display=swap"
      rel="stylesheet"/>
			<link rel="preconnect" href="https://fonts.googleapis.com">
			<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
			<link href="https://fonts.googleapis.com/css2?family=Fredoka:wdth,wght@75..125,300..700&family=Montserrat:wght@100..900&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root{
    --altura-header:52px;
    --fondo: url(/fondo.svg);
  }
  html {
    font-family: "Fredoka", sans-serif;
    color: black;
    background-image: url(/fondo.svg);
    background-size: 20px;
    scroll-behavior: smooth;
    scroll-padding-top: 100px;
  }

  body {
    position: relative;
    margin: 0px;
    overflow-x: hidden;
  }

  a {
    color: black;
    text-decoration: none;
  }

	h1, h2, h3, h4, strong, a, spam{
		font-family:"Montserrat", sans-serif; 
	}

  li{
    list-style: none;
  }
</style>

