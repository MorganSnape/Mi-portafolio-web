---
interface Props {
  size?: "sm" | "md" | "xl";
  src: string;
  alt?: string;
}

const { src, alt } = Astro.props;

let { size } = Astro.props;

if (size === undefined) {
  size = "sm";
}
---

<img src={src} alt={alt} class:list={["foto-card", "foto-card-" + size]} />

<style>
  .foto-card {
    height: 200px;
    border-radius: 10px;
    border: #d8d8d8 solid 1px;
    overflow: hidden;
    object-fit: cover;
    width: clamp(100px, 45%, 300px);
  }
</style>
