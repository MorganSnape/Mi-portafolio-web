---
import Subtitulo from "../components/Subtitulo.astro"
import Card from "../components/Card.astro";
---

<section class="proyectos-container">
      

  <div id="lista-proyectos">
    <Subtitulo text="Mis Proyectos" align="aside" type="Front-End"/>
    <Card
      size="md"
      tags={["Astro", "En proceso"]}
      src="/images/Amarilla.png"
      href="/"
      title="Amarilla Garden"
      body="Pagina dedicada dedicadas a la venta de plantas..."
    />
    <Card
      size="sm"
      tags={["Astro" , "En proceso"]}
      src="/images/Rick-Morty.png"
      href="/"
      title="Amarilla Garden"
      body="Pagina dedicada dedicadas a la venta de plantas..."
    />
    <Card
      size="sm"
      tags={["Astro"]}
      src="/images/proyecto.jpg"
      href="/"
      title="Amarilla Garden"
      body="Pagina dedicada dedicadas a la venta de plantas..."
    />
    <Card
      size="md"
      tags={["Astro"]}
      src="/images/proyecto.jpg"
      href="/"
      title="Amarilla Garden"
      body="Pagina dedicada dedicadas a la venta de plantas..."
    />
  </div>
  
  
</section>

<style>
 
 #lista-proyectos {
    margin-top: 20px;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
    background-image: url(/fondoDos.svg);
    background-size: 20px;
    padding: 80px 0px;
  }
  .proyectos-container {
    display: flex;
    flex-direction: column;
    
  }
</style>