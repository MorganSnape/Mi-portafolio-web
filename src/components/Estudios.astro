---
import Subtitulo from "./Subtitulo.astro";
import CardEstudios from "./CardEstudios.astro";
---

<section id="studies-container">
  <Subtitulo align="center" type="Estudios" position="two"  id="studies"/>
  <div id="studies-list">
    <CardEstudios
    src="/images/Fundation UX.png"
    href="https://drive.google.com/file/d/1M7SbJCWjj96QONeeRpf7gi18PFBuHGpH/view?usp=sharing"
    title="Fundamentos de la Experiencia de Usuario - Coursera"
    body="Conceptos básicos del diseño de experiencia de usuario e introducción a las especializaciones del campo | 2024"
  />
    <CardEstudios
      src="/images/Full-Stacks.webp"
      href="https://drive.google.com/file/d/1wPlbcUjYIwA3q7k8TiRpzzAmSzoulnaL/view?usp=sharing"
      title="Diplomado - Programador Full Stack Junior"
      body="En alianza de la Universidad Tecnológica de Pereira y la Universidad Católica de Pereira | 2024"
    />

    <CardEstudios
      src="/images/personal-curso.webp"
      href="https://app.aluracursos.com/degree/certificate/172dfcb2-3e29-48a3-b53e-950fcbc8e6f8?lang"
      title="Formación Desarrollo Personal G7 - ONE"
      body="En alianza de Alura Latam y Oracle. Curso dedicado al desarrodo de habilidades de habilidades blandas  | 2024 "
    />
  </div>
</section>

<style>
  #studies-container {
    position: relative;
    padding-top: 100px;
    padding-bottom: 40px;
  }
  #studies-list {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    padding: 0 20px;
  }
</style>
