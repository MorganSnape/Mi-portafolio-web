---
interface Props {
  title: string;
  body: string;
  href: string;
  tag1?: string;
  tag2?: string;
  src: string;
  alt?: string;
}

const { href, title, body, tag1, tag2, src, alt } = Astro.props;
---

<li class="link-card">
  <a href={href} class="element-card-content">
    <div class="text-card">
      <span class="tag">{tag1}{tag2}</span>

      <div>
        <h4>{title}</h4>
        <p>{body}</p>
      </div>
    </div>
    <img src={src} alt={alt} class="foto-card" />
  </a>
</li>

<style>
  .link-card {
    padding: 20px;
    width: clamp(400px, 60%, 500px);
    height: 200px;
    border-radius: 10px;
    display: flex;
    background-color: #fbfbfb;
    border: #676767 solid 1px;
    box-shadow: rgba(0, 0, 0, 0.15) 0px 0px 20px 2px;
  }
  .element-card-content {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 10px;
  }

  .text-card {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  .foto-card {
    height: 200px;
    width: 300px;
    border-radius: 10px;
    border: #676767 solid 1px;
  }
  .tag {
    display: flex;
    flex-direction: row;
    gap: 20px;
    display: flex;
    align-items: center;
    background-color: #8c659b;
    width: fit-content;
    padding: 8px 30px;
    border-radius: 100px;
    color: white;
    font-weight: 600;
    box-shadow: inset 0px 0px 8px 1px rgba(35, 35, 35, 0.4);
  }
  p{
    color: #5C5C5C;
    font-size: 16px;
    font-weight: 400;
    font-family: "Fredoka", sans-serif;
  }

  h4{
    font-weight: 600;
  }
</style>

