---
import RedesBoton from "@/components/RedesBoton.astro";
import { Icon } from "astro-icon/components";
---

<section
  id="inicio"
  class="py-20 lg:py-0 lg:h-screen max-w-[1024px] w-full flex flex-col lg:flex-row items-center justify-center lg:justify-between gap-8 lg:gap-0 px-[clamp(0.75rem,_-1.974rem_+_14.53vw,_5rem)] lg:px-8 xl:px-0 font-medium"
>
  <div
    id="biografia"
    class="w-full lg:w-1/2 flex flex-col gap-4 lg:gap-12 text-center lg:text-left"
  >
    <h1
      class="primaryButton gap-2 mx-auto w-fit lg:mx-0 py-2 px-8 bg-tag text-center text-[clamp(1.02rem,_1.114rem_+_0.727vw,_1.20rem)]"
    >
      ¡Hola! soy <span class="font-bold">Gabriela Ferrer.</span>
    </h1>
    <div class="flex gap-4 flex-col ">
      <h2 class=" font-extrabold text-[clamp(1.25rem,_1.114rem_+_0.727vw,_1.75rem)]">
        <span class="text-primary">Front-End</span> Developer <span
          class="text-primary"
        >
          <br />UX / UI</span
        > Designer
      </h2>
      <p class="text-base lg:text-lg font-medium leading-tight">
        Soy UX / UI Developer y diseñadora gráfica en formación ¡Bienvenido a mi
        portafolio!
      </p>
    </div>
    <div
      id="mis-redes"
      class="flex flex-wrap gap-4 justify-center lg:justify-start"
    >
      <RedesBoton href="https://github.com/MorganSnape" text="Github">
        <Icon name="fa6-brands:github" height={20} width={20} />
      </RedesBoton>
      <RedesBoton
        href="https://www.linkedin.com/in/gabriela-de-los-angeles-ferrer-martinez-8a45771a4/"
        text="LinkedIn"
      >
        <Icon name="fa6-brands:linkedin" height={20} width={20} />
      </RedesBoton>
      <RedesBoton
        href="/pdf/Hoja de vida Gabriela Ferrer.pdf"
        text="Currículum"
      >
        <Icon name="bxs:file-blank" height={20} width={20} /></RedesBoton
      >
    </div>
  </div>
  <div class="font-bold flex flex-col items-center w-full lg:w-1/2">
    <div class="relative">
      <div
        id="foto-perfil"
        class="flex justify-center bg-primary overflow-hidden bg-cover bg-center rounded-xl md:rounded-2xl w-44 sm:w-48 md:w-[280px] md:h-[380px] lg:h-[400px] border-2 border-black"
      >
        <img
          src="/images/Foto.png"
          alt="Foto de Gabriela Ferrer usando un sueter rosa y sonriendo."
          class="w-11/12 object-cover"
        />
      </div>
      <div
        class="primaryButton bg-tag font-bold absolute -left-28 top-8 md:top-14 w-fit py-2 px-4 text-[clamp(0.1rem,_0.5rem_+_0.727vw,_0.8rem)]"
      >
        Front-End Developer
      </div>
      <div
        class="primaryButton bg-tag font-bold absolute w-fit py-2 px-4 text-[clamp(0.1rem,_0.5rem_+_0.727vw,_0.8rem)] -right-24 bottom-6 md:bottom-14"
      >
        UX / UI Desinger
      </div>
    </div>
  </div>
</section>
