<article class={`flex flex-col md:flex-row items-center h-auto md:h-40 w-full md:w-[80vw] md:max-w-[1000px] md:min-h-[240px] ${ProyectTypes[type] === "UX"? "md:flex-row":"md:flex-row-reverse"}`}>
