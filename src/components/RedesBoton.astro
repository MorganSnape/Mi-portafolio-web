---
interface Props {
  text: string;
  href: string;
  target?: string;
}

const { text, href } = Astro.props;

let { target } = Astro.props;

if (!target) {
  target = "_blank";
}
---
<div>
  <a
    {href}
    class="select-none flex flex-row justify-center items-center gap-[10px] font-medium w-fit bg-[#8c659b] text-white border border-black rounded-[10px] transition-transform duration-100 ease-in-out hover:scale-[1.03] px-4 py-[4px] text-[16px] shadow-[4px_4px_0px_#000000] md:px-[18px] md:py-2 md:text-[14px] md:shadow-[8px_8px_0px_#000000]"
    {target}
  >
    <slot />
    <span>{text}</span>
  </a>
</div>

