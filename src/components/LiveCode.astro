---
import { Icon } from "astro-icon/components";

interface Props {
  href: string;
  name: string;
  title: string;
  target?: string;
}

const { href, name, title } = Astro.props;
let { target } = Astro.props;
if (!target) {
  target = "_blank";
}
---

<a class="button-cards" href={href} {target}>
  <span>{title}</span>
  <Icon name={name} class="icon" />
</a>

<style>
  .button-cards {
    text-align: center;
    height: 30px;
    width: 40%;
    border-radius: 10px;
    display: flex;
    align-items: center;
    gap: 8px;
    justify-content: center;
    color: rgb(0, 0, 0);
    border: 1px solid rgb(0, 0, 0);
    transition: transform 0.1s ease-in-out;

    /* box-shadow: 4px 4px 0px #000000; */
    padding: 8px 14px;
    font-size: 14px;
  }

  span {
    font-size: 16px;
    font-weight: 600;
  }
  .icon {
    font-size: 18px;
    transition: transform 0.15s ease;
  }

  .button-cards:hover {
    transform: scale(1.05);
  }

  .button-cards:hover .icon {
    transform: rotate(40deg) scale(1.05);
  }

  /*Vista movil*/
  @media (max-width: 768px) {
    .button-cards {
      padding: 4px 12px;
      font-size: 12px;
    }

    .button-cards:hover {
      transform: none;
    }

    .button-cards:hover .icon {
      transform: none;
    }
  }

  @media (max-width: 400px) {
    span {
      font-size: 12px;
      font-weight: 600;
    }
    .icon {
      font-size: 16px;
      transition: transform 0.15s ease;
    }

    .button-cards {
      padding: 4px 8px;
    }
  }
</style>
