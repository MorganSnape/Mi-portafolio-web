---
import { Icon } from "astro-icon/components";

import type { Studies } from "@/models";

interface Props extends Studies {}

const { title, descriptions, link, tags, institution, duration } = Astro.props;
---

<article
  class="shadow-primary select-none w-[80vw] max-w-[1000px] rounded-xl md:rounded-2xl p-4 md:py-5 md:px-12 bg-white flex flex-col justify-between gap-5 min-h[300px]"
>
  <div class="flex flex-wrap gap-2">
    {
      tags &&
        tags.map((tag) => (
          <div class="bg-secondary text-black py-0.5 px-2 md:px-4 w-fit text-xs font-semibold border-1 border-black ">
            {tag}
          </div>
        ))
    }
  </div>
  <main>
    <h4 class="text-lg md:text-xl font-semibold font-jost">
      {title}<span class="text-primary">{` | ${duration}`}</span>
    </h4>
    <p class="text-primary font-bold text-xs">{institution}</p>
    <ul
      class="columns-2 gap-x-2 md:gap-x-6 mt-5 flex-grow list-disc list-outside pl-5 space-y-1"
    >
      {
        descriptions &&
          descriptions.map((description) => (
            <li class="text-xs md:text-sm text-black text-pretty">
              {description}
            </li>
          ))
      }
    </ul>
  </main>
  <footer>
    {
      link && (
        <a
          href={link}
          target="_blank"
          class="cursor-pointer w-fit border-2 border-primary rounded-lg px-4 py-2 text-primary font-semibold text-sm hover:bg-primary hover:text-white transition duration-300 ease-in-out flex items-center gap-1"
        >
          <Icon name="g-link" height={20} width={20} />
          Ver certificado
        </a>
      )
    }
  </footer>
</article>
