---
import { Icon } from "astro-icon/components";
import Subtitulo from "./Subtitulo.astro";

const stacks = ["html", "css", "js", "astro", "figma"];

const MAP_STACK_TO_INFO: Record<string, { src: string }> = {
  html: {
    src: "skill-icons:html",
  },
  css: {
    src: "skill-icons:css",
  },
  js: {
    src: "skill-icons:javascript",
  },
  astro: {
    src: "skill-icons:astro",
  },
  figma: {
    src: "skill-icons:figma-dark",
  },
} as const;

const cssColors = {
  htmlColor: "orange",
  cssColor: "blue",
  jsColor: "yellou",
  astroColor: "purpule",
  figmaColor: "gray",
};
---

<section id="lista-stacks">
  <Subtitulo align="center" type="Stacks" position="two" />

  <article id="icons-container">
    {
      stacks.map((stack) => {
        const { src } = MAP_STACK_TO_INFO[stack];

        return (
          <div>
            <Icon class="stack" name={src} />
          </div>
        );
      })
    }
  </article>
</section>

<style>
  #lista-stacks {
    position: relative;
    padding: 100px 0px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
  }
  #icons-container {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: 80px;
    width: 600px;
  }

  div {
    display: flex;
    justify-content: center;
    padding: 0px;
    border-radius: 100%;
    position: relative;

    &::before {
      z-index: -1;
      content: "";
      border-radius: 50%;

      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      -webkit-box-shadow: 0px 0px 20px 11px rgba(0, 0, 0, 0.75);
      -moz-box-shadow: 0px 0px 20px 11px rgba(0, 0, 0, 0.75);
      box-shadow: 0px 0px 20px 11px rgba(0, 0, 0, 0.75);
    }
  }

  /* Vista MOvil */
  @media (max-width: 768px) {

    #lista-stacks{
      padding: 140px 0px;
    }
    #icons-container {
      padding: 8px 0px;
      gap: 32px;
      width: 200px;
    }
    .stack {
      font-size: 40px;
    }
  }

  @media (min-width: 768px) {
    #icons-container {
      padding: 80px 0px;
      gap: 80px;
      width: fit-content;
    }
    .stack {
      font-size: 50px;
    }

  }
</style>
