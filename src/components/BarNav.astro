---
import { Icon } from "astro-icon/components";
import RedesBoton from "./RedesBoton.astro";
---

<header
  style="position: fixed; right: 0; z-index: 4; width:100vw; background-image:var(--fondo);background-size: 20px;"
>
  <nav>
    <label for="menu-hamburguer" class="label-hamburguer">
      <Icon name="codicon:menu" style="font-size: 30px;" />
    </label>
    <input type="checkbox" name="" id="menu-hamburguer" />

    <ul class="ul-links flex flex-row items-center gap-2">
      <li class="li-link">
        <a href="#inicio" class="nav-item">Inicio</a>
      </li>
      <li class="li-link">
        <a href="#sobre-mi" class="nav-item">Sobre mí</a>
      </li>
      <li class="li-link">
        <a href="#experiencia-container" class="nav-item">Experiencia</a>
      </li>
      <li class="li-link">
        <a href="#proyectos-container" class="nav-item">Proyectos</a>
      </li>
      <li class="li-link">
        <a href="#estudios-container" class="nav-item">Estudios</a>
      </li>
      <li>
        <a
          href="#footer"
          class="buttonPurple gap-2.5 px-4 py-2 text-base shadow-[4px_4px_0px_#000000] md:px-4 md:py-1 md:text-sm md:shadow-[6px_6px_0px_#000000]"
        >
          Contactame
        </a>
      </li>
    </ul>
  </nav>
</header>

<script>
  const $ul = document.querySelector("header ul.ul-links");
  const $checkbox = document.getElementById(
    "menu-hamburguer",
  ) as HTMLInputElement;
  const $navItems = document.querySelectorAll(
    ".nav-item",
  ) as NodeListOf<HTMLAnchorElement>;

  // Cerrar menu al hacer click
  $ul?.addEventListener("click", (e) => {
    $checkbox.checked = false;
  });

  // Función para resaltar nav item activo
  function updateActiveNavItem() {
    const sections = document.querySelectorAll(
      "section[id]",
    ) as NodeListOf<HTMLElement>;
    let currentSection = "inicio";

    sections.forEach((section) => {
      const rect = section.getBoundingClientRect();
      if (
        rect.top <= window.innerHeight / 2 &&
        rect.bottom >= window.innerHeight / 2
      ) {
        currentSection = section.id;
      }
    });

    $navItems.forEach((item) => {
      item.classList.remove("active");
      const href = item.getAttribute("href");
      if (
        href === `#${currentSection}` ||
        (currentSection === "inicio" && href === "#inicio")
      ) {
        item.classList.add("active");
      }
    });
  }

  // Listener en scroll
  window.addEventListener("scroll", updateActiveNavItem);
  // Inicializar al cargar
  updateActiveNavItem();
</script>

<style>
  nav {
    height: var(--altura-header);
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: flex-end;
    gap: 30px;
    padding-right: 40px;
    border-bottom: solid 0.5px #d8d8d8;
  }

  .nav-item {
    z-index: 4;
    list-style: none;
    font-size: 16px;
    font-weight: 500;
    color: black;
    cursor: pointer;
    padding: 4px 16px;
    border: 2px solid transparent;
    transition: transform 0.1s ease-in-out;
  }

  .nav-item:hover {
    transform: scale(1.03);
    color: #666;
  }

  .nav-item:active {
    font-weight: 600;
    color: black;
  }

  .nav-item.active {
    font-weight: 700;
    color: var(--primary, #9775a1);
    border-bottom: 3px solid var(--primary, #9775a1);
  }

  .label-hamburguer,
  #menu-hamburguer {
    display: none;
  }

  /*Vista movil*/

  @media (max-width: 768px) {
    .label-hamburguer,
    #menu-hamburguer {
      display: contents;
    }
    nav {
      position: relative;
      flex-wrap: wrap;
    }
    .ul-links {
      width: 100%;
      background-image: var(--fondo);
      position: absolute;
      left: 0;
      top: var(--altura-header);

      justify-content: flex-start;
      /* gap: 40px; */

      height: 0;
      padding-left: 0px;
      background-size: 20px;
      margin: 0px;
      overflow: hidden;

      transition: all 0.3s;
    }

    .li-link {
      width: 100%;
    }

    .li-link:not(:last-child) {
      border-bottom: solid 1px #d8d8d8;
    }

    .li-link:nth-child(2n) {
      background-color: #d8d8d850;
    }

    .nav-item {
      display: block;
      width: 100%;
      padding: 16px 0px;
      font-size: 20px;
      text-align: center;
    }

    #menu-hamburguer:checked + .ul-links {
      height: calc(100vh - var(--altura-header));
    }
  }

  /*Vista computador*/

  @media (min-width: 768px) {
    .ul-links {
      display: flex;
      flex-direction: row;
    }
  }
</style>
