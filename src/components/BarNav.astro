---
import { Icon } from "astro-icon/components";
---

<header
  style="position: fixed; right: 0; z-index: 4; width:100vw; background-image:var(--fondo);background-size: 20px;"
>
  <nav>
    <label for="menu-hamburguer" class="label-hamburguer">
      <Icon name="codicon:menu" style="font-size: 30px;" />
    </label>
    <input type="checkbox" name="" id="menu-hamburguer" checked/>

    <ul class="ul-links">
      <li class="li-link">
        <a href="#sobre-mi-container" class="nav-item">Sobre MÃ­</a>
      </li>
      <li class="li-link">
        <a href="#proyectos-container-frond" class="nav-item">Proyectos</a>
      </li>
      <li class="li-link">
        <a href="#studies-container" class="nav-item">Estudios</a>
      </li>
    </ul>
  </nav>
</header>

<script>
  const $ul = document.querySelector("header ul.ul-links");
  const $checkbox = document.getElementById(
    "menu-hamburguer"
  ) as HTMLInputElement;

  console.log($ul);

  $ul?.addEventListener("click", (e) => {
    $checkbox.checked = false;
    console.log("Click!", e);
  });
</script>

<style>

  nav {
    height: var(--altura-header);
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: flex-end;
    gap: 30px;
    padding-right: 40px;
    border-bottom: solid 0.5px #d8d8d8;
  }

  .nav-item {
    z-index: 4;
    list-style: none;
    font-size: 16px;
    font-weight: 500;
    color: black;
    cursor: pointer;
    padding: 10px;
    border: 2px solid transparent;
    transition: transform 0.1s ease-in-out;
  }

  .nav-item:hover {
    transform: scale(1.03);
    color: #666;
  }

  .nav-item:active {
    font-weight: 600;
    color: black;
  }

  .label-hamburguer,
  #menu-hamburguer {
    display: none;
  }

  /*Vista movil*/

  @media (max-width: 768px) {
    .label-hamburguer,
    #menu-hamburguer {
      display: contents;
    }
    nav {
      position: relative;
      flex-wrap: wrap;
    }
    .ul-links {
      width: 100%;
      background-image: var(--fondo);
      position: absolute;
      left: 0;
      top: var(--altura-header);

      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      /* gap: 40px; */

      height: 0;
      padding-left: 0px;
      background-size: 20px;
      margin: 0px;
      overflow: hidden;

      transition: all 0.3s;
    }

    .li-link {
      width: 100%;
    }

    .li-link:not(:last-child){
      border-bottom: solid 1px #d8d8d8;
    }

    .li-link:nth-child(2n) {
      background-color: #d8d8d850;
    }

    .nav-item {
      display: block;
      width: 100%;
      padding: 16px 0;
      font-size: 20px;
      text-align: center;
    }

    #menu-hamburguer:checked + .ul-links {
      height: calc(100vh - var(--altura-header));
    }
  }

  /*Vista computador*/

  @media (min-width: 768px) {
    .ul-links {
      display: flex;
      flex-direction: row;
    }
  }
</style>
